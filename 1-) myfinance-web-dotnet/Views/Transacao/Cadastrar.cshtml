@model myfinance_web_dotnet.Models.PlanoContaModel

@{
    ViewData["Title"] = "Criar Plano de Contas";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form asp-controller="PlanoConta" asp-action="Cadastrar" method="post">
        <div class="mb-3">
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="mb-3 p-2">
            <label class="d-block mb-3">Descrição:</label>
            <input type="text" asp-for="Descricao" />
        </div>
        <div class="mb-3">
            <label class="d-block p-2">Tipo:</label>
            <label class="d-inline p-2">@Html.RadioButtonFor(m => m.Tipo, "D")Despesa</label>
            <label class="d-inline p-2">@Html.RadioButtonFor(m => m.Tipo, "R")Receita</label>
        </div>
        <button type="submit" class="btn btn-block btn-success mb-3">Registrar</button>
    </form>
</div>